<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Nossos Contratantes</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='/style.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='/col.css'>
    <script src='/style.js'></script>
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <section class="col-6 lista margem">
    <h1>Contratantes:</h1><br>
        <%
            if(todosContratantes){%>
                <% todosContratantes.forEach(contratante => {%>
                    <hr>
                    <form action="/admin/getFestasContratante" method="post">
                        <input type="hidden" name="idUsuario" value = <%= contratante.idUsuario %> >
                        <dt>Nome: <%- contratante.nome %></dt>
                        <dd>Email: <%- contratante.email %></dd>
                        <button>Ver Festas</button>
                    </form>
                    <hr>
                <%})%>
            <%}
        %>
    </section>
</body>
</html>